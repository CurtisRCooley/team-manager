<h1>Team Management</h1>

<% form_for(@schedule, :url => {:action => 'edit'}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :notification_days %><br />
    <%= f.text_field :notification_days %>
  </p>
  <p>
    <%= f.label :minimum_players %><br />
    <%= f.text_field :minimum_players %>
  </p>
  <p>
    <%= f.label :note %><br />
    <%= f.text_area :note %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Back', :action => 'show', :id => @schedule %>

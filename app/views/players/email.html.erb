<h1>Email Players</h1>

<% form_tag :action => 'email' do %>

  <p>
    <%= label_tag "Subject" %><br />
    <%= text_field_tag :subject, params[:subject], :size => 40 %>
  </p>
  <p>
    <%= label_tag "Message" %><br />
    <%= text_area_tag :message, params[:message], :size => '40x20' %>
  </p>
  <p>
    <%= submit_tag 'Send' %>
  </p>
<% end %>

<%= link_to 'Back', home_url %>

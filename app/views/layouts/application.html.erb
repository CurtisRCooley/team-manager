<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title>Rec Team Captain</title>
  <%= stylesheet_link_tag 'application' %>
</head>
<body>
  <div id='header'>
    <span class='login-links'>
    <% if session[:user_id] %>
      logged in as <%= User.find_by_id(session[:user_id]).email %>
      | <%= link_to "Logout", :logout, :class => 'header' %>
    <% else %>
      <%= link_to "Login", :login, :class => 'header' %> |
      <%= link_to "Register", :register, :class => 'header' %>
    <% end %>
    </span>
    <h1>Rec Team Captain <em>Beta</em></h1>
  </div>
<p style="color: darkgreen"><%= flash[:notice] %></p>

<%= yield %>

<div id='footer'>
  Rec Team Manager &trade; LMCR Enterprises
</div>
<script type="text/javascript">
var uservoiceOptions = {
  /* required */
  key: 'teamcaptain',
  host: 'teamcaptain.uservoice.com', 
  forum: '35869',
  showTab: true,  
  /* optional */
  alignment: 'right',
  background_color:'darkgreen', 
  text_color: 'white',
  hover_color: 'green',
  lang: 'en'
};

function _loadUserVoice() {
  var s = document.createElement('script');
  s.setAttribute('type', 'text/javascript');
  s.setAttribute('src', ("https:" == document.location.protocol ? "https://" : "http://") + "cdn.uservoice.com/javascripts/widgets/tab.js");
  document.getElementsByTagName('head')[0].appendChild(s);
}
_loadSuper = window.onload;
window.onload = (typeof window.onload != 'function') ? _loadUserVoice : function() { _loadSuper(); _loadUserVoice(); };
</script>
</body>
</html>
